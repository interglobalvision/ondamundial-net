$header-height = 106px
$transition-duration = .3s

// HEADER

#site-logo
  width: 30px

#header-main
  padding-top: $margin-small

#site-title-holder
  flex-grow: 1

.social-icon
  width: 30px

#overlay
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  background-color: $color-grey-light
  pointer-events: none
  opacity: 0
  transition: opacity $transition-duration
  mix-blend-mode: luminosity

.overlay-active
  #overlay
    opacity: 1

#mobile-overlay-toggle
  position: relative
  width: 30px
  height: 20px
  &::before,
  &::after
    position: absolute
    right: 0
    left: 0
    border-top: 6px solid $color-black
    content: ''
    transition: transform $transition-duration
  &::before
    top: 0
  &::after
    bottom: 0

.overlay-active
  #mobile-overlay-toggle
    &::before
      transform: translateY(7px) rotate(45deg)
    &::after
      transform: translateY(-7px) rotate(-45deg)

#mobile-menu
  position: fixed
  top: $header-height
  left: 0
  width: 100vw
  opacity: 0
  pointer-events: none
  transition: opacity $transition-duration

.overlay-active
  #mobile-menu
    opacity: 1
    pointer-events: all

// ******************************************************

// PLAYER

#offline-icon
  display: inline-block

#play-button,
#pause-button
  display: none

#player-container

  &.online
    #offline-icon
      display: none

    #pause-button
      display: none

    #play-button
      display: inline-block

  &.playing
    #pause-button
      display: inline-block

    #play-button
      display: none
