
// ******************************************************

// BASIC

.blend-difference
  .desktop-page-close
    svg
      stroke: $color-grey

.overlay-active
  .page-nav-item
    opacity: 0
    border-bottom-width: 0px
  .desktop-page-open.active
    opacity: 1
  .blend-difference
    .desktop-page-close
      opacity: 1
      svg
        stroke: $color-black

// ******************************************************

// HEADER

#site-logo
  width: 50px

#header-main
  padding-top: $margin-small

.page-nav-item
  opacity: 1
  border-bottom: 2px solid $color-grey
  transition: opacity border-bottom-width $transition-duration
  padding-bottom: 2px

.desktop-page-close
  position: relative
  width: $margin-small
  height: $margin-small
  display: inline-block
  margin: 0 $margin-tiny ($margin-small * -.3)
  opacity: 0
  transition: opacity $transition-duration
  svg
    width: 100%
    height: 100%
    display: block
    fill: none

// ******************************************************
